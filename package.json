{
  "name": "ultraview",
    "icon": "images/icon.png",
  "displayName": "Ultraview – Database & Markdown File Viewer",
  "description": "Instantly preview SQLite, DuckDB, Access, SQL dump files and Markdown directly from the file tree – no connection setup needed. (Ultraview)",
  "version": "0.2.0",
  "publisher": "Dannan",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "sqlite",
    "database",
    "duckdb",
    "access",
    "sql",
    "markdown",
    "viewer",
    "preview",  
    "nodes",
    "visualization"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ultraview-graph",
          "title": "Code Graph",
          "icon": "$(type-hierarchy)"
        }
      ]
    },
    "views": {
      "ultraview-graph": [
        {
          "type": "webview",
          "id": "ultraview.codeGraph",
          "name": "Code Graph"
        }
      ]
    },
    "commands": [
      {
        "command": "ultraview.openCodeGraph",
        "title": "Ultraview: Open Code Graph as Editor",
        "icon": "$(type-hierarchy)"
      }
    ],
    "customEditors": [
      {
        "viewType": "ultraview.sqlite",
        "displayName": "SQLite Viewer",
        "selector": [
          { "filenamePattern": "*.db" },
          { "filenamePattern": "*.sqlite" },
          { "filenamePattern": "*.sqlite3" },
          { "filenamePattern": "*.db3" }
        ],
        "priority": "default"
      },
      {
        "viewType": "ultraview.duckdb",
        "displayName": "DuckDB Viewer",
        "selector": [
          { "filenamePattern": "*.duckdb" },
          { "filenamePattern": "*.ddb" }
        ],
        "priority": "default"
      },
      {
        "viewType": "ultraview.access",
        "displayName": "Access DB Viewer",
        "selector": [
          { "filenamePattern": "*.mdb" },
          { "filenamePattern": "*.accdb" }
        ],
        "priority": "default"
      },
      {
        "viewType": "ultraview.sqldump",
        "displayName": "Ultraview: SQL Dump Viewer",
        "selector": [
          { "filenamePattern": "*.sql" },
          { "filenamePattern": "*.sqlite.sql" },
          { "filenamePattern": "*.mysql.sql" },
          { "filenamePattern": "*.pg.sql" },
          { "filenamePattern": "*.pgsql" },
          { "filenamePattern": "*.dump" },
          { "filenamePattern": "*.bak" }
        ],
        "priority": "default"
      },
      {
        "viewType": "ultraview.markdown",
        "displayName": "Markdown Preview",
        "selector": [
          { "filenamePattern": "*.md" },
          { "filenamePattern": "*.mdx" },
          { "filenamePattern": "*.markdown" }
        ],
        "priority": "default"
      },
      {
        "viewType": "ultraview.index",
        "displayName": "Index File Viewer",
        "selector": [
          { "filenamePattern": "*.idx" },
          { "filenamePattern": "*.index" },
          { "filenamePattern": "*.ndx" }
        ],
        "priority": "default"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Da3n0n/UltraView.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "test": "echo \"no tests\"",
    "vsix": "vsce package --no-dependencies",
    "release": "git add -A && git diff --staged --quiet || git commit -m \"chore: pre-release\" && npm version minor && git push && git push --tags",
    "release:patch": "git add -A && git diff --staged --quiet || git commit -m \"chore: pre-release\" && npm version patch && git push && git push --tags",
    "release:major": "git add -A && git diff --staged --quiet || git commit -m \"chore: pre-release\" && npm version major && git push && git push --tags"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.24.0",
    "copy-webpack-plugin": "^13.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "marked": "^11.1.1",
    "mdb-reader": "^1.2.0",
    "sql.js": "^1.11.0"
  }
}
